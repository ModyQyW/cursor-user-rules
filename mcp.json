{
  "mcpServers": {
    "exa": {
      "headers": {},
      "type": "http",
      "url": "https://mcp.exa.ai/mcp?tools=get_code_context_exa"
    },
    "context7": {
      "headers": {
        "CONTEXT7_API_KEY": "YOUR_KEY_OR_KEEP_HEADERS_EMPTY"
      },
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },

    "time": {
      "args": ["mcp-server-time"],
      "command": "uvx"
    },

    "fetch": {
      "args": ["mcp-server-fetch"],
      "command": "uvx"
    },

    "ddg-search": {
      "command": "uvx",
      "args": ["duckduckgo-mcp-server"]
    },

    "github": {
      "headers": {
        "Authorization": "Bearer YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
      },
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "deepwiki": {
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "zread": {
      "headers": {
        "Authorization": "Bearer YOUR_GLM_API_KEY"
      },
      "type": "http",
      "url": "https://open.bigmodel.cn/api/mcp/zread/mcp"
    },

    "zai-mcp-server": {
      "args": [
        "-y",
        "@z_ai/mcp-server"
      ],
      "command": "npx",
      "env": {
        "Z_AI_API_KEY": "YOUR_GLM_API_KEY",
        "Z_AI_MODE": "ZHIPU"
      },
      "type": "stdio"
    },

    "Sentry": {
      "url": "https://mcp.sentry.dev/mcp"
    },

    "chrome-devtools": {
      "command": "bunx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  }
}